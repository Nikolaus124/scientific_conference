<h1>
    <span class="title">Реєстрація учасників</span>
</h1>

<br>

<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>

<%= form_with model: @member do |form| %>
  <div class="form-group">
    <%= form.label "Прізвище" %><br>
    <%= form.text_field :last_name, :class=>"form-control" %>
    <% @member.errors.full_messages_for(:last_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label "Ім'я" %><br>
    <%= form.text_field :first_name, :class=>"form-control" %>
    <% @member.errors.full_messages_for(:first_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label "По батькові" %><br>
    <%= form.text_field :surname, :class=>"form-control" %>
    <% @member.errors.full_messages_for(:surname).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label "Вчене звання" %><br>
    <%= form.text_field :academic_status, :class=>"form-control" %>
    <% @member.errors.full_messages_for(:academic_status).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label "Установа" %><br>
    <%= form.text_field :institution, :class=>"form-control" %>
    <% @member.errors.full_messages_for(:institution).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label "Назва доповіді" %><br>
    <%= form.text_area :report_title, :class=>"form-control" %>
    <% @member.errors.full_messages_for(:report_title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label "Електронна пошта" %><br>
    <%= form.text_field :email, :class=>"form-control" %>
    <% @member.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.submit 'Зареєструватись', :class=>"btn btn-primary"%>
  </div>
<% end %>