        <span class="sr-only">Toggle nav</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div id="main-menu" class="collapse navbar-collapse">
      <ul class="nav navbar-nav flex-row">
        <li>
          <a class="panel-link" style="font-size: 20px; font-weight:bold; color:black; text-decoration: none;" href="/#conference">
            <%= I18n.t('header.conference') %>
          </a>
        </li>

        <li>
          <a style="font-size: 20px; font-weight:bold; color:black;" href="/#organizators">
            <%= I18n.t('header.organizers') %>
          </a>
        </li>

        <li>
